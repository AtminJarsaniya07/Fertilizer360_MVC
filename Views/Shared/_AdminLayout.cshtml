<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fertilizer360 Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar bg-dark position-fixed vh-100" style="width: 250px;">
        <div class="text-center my-4">
            <img src="~/Images/logo.png" alt="Fertilizer360 Logo" class="logo img-fluid" style="max-height: 80px;">
            <h4 class="mt-2 text-white">Admin Panel</h4>
        </div>

        <ul class="nav flex-column px-3">
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Index">🏠 Home</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="Shop">🛒 Shop Management</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="FertilizerManagement">🌱 Fertilizer Management</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="AllOrders">📦 Orders</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="UsersList">👥 User Management</a></li>
            <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="UpdateProfile">👤 Profile</a></li>
            <li class="nav-item"><a class="nav-link text-danger" asp-controller="Account" asp-action="Login">🚪 Logout</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 250px;">
        <div class="container py-4">
            <main role="main">
                <div class="card shadow-sm">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
