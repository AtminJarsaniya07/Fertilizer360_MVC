<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fertilizer360</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fertilizer360.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo Section -->
                <div class="d-flex align-items-center">
                    <img src="~/Images/logo.png" alt="Fertilizer360 Logo" class="logo">
                    <a class="navbar-brand ms-2 fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        Fertilizer360
                    </a>
                </div>

                <!-- Navigation Links -->
                <ul class="navbar-nav d-flex flex-row gap-4">
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </li>
                </ul>

                <!-- Account Section with Dropdown -->
                @using Microsoft.AspNetCore.Identity;
                @inject SignInManager<Users> signInManager;

                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-dark fw-medium d-flex align-items-center" href="#" role="button"
                       id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="icon me-2">👤</span> My Account
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="UpdateProfile">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Login">Log Out</a></li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <main class="w-100 flex-grow-1">@RenderBody()</main>
   
    <footer class="border-top footer text-muted bg-white py-4 text-center mt-auto">
        <div class="container">
            <h2 class="fw-bold text-dark">
                <span class="text-primary">Fertilizer360</span> . We're here
            </h2>
            <p class="text-secondary mb-4">
                Hello, we are Fertilizer360, trying to make an effort to put the right people for you to get the best results. Just insight.
            </p>

            <div class="row mb-4">
                <!-- Office Location -->
                <div class="col-md-6">
                    <h3 class="fw-bold text-dark">Office Location</h3>
                    <p class="text-secondary">RK University City Rajkot</p>
                    <p class="text-secondary">360020 Gujarat</p>
                    <p class="text-secondary">India</p>
                </div>

                <!-- Subscription -->
                <div class="col-md-6">
                    <h3 class="fw-bold text-dark">Subscribe</h3>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Enter your email address">
                        <button class="btn btn-outline-secondary">📩</button>
                    </div>
                </div>
            </div>

            <!-- Bottom Footer -->
            <div class="d-flex justify-content-between align-items-center border-top pt-3 flex-wrap">
                <img src="~/Images/logo.png" alt="Fertilizer360 Logo" width="50">
                <p class="text-secondary mb-0">&copy; 2025 Fertilizer360. All rights reserved.</p>

                <!-- Social Icons -->
                <div>
                    <a href="#" class="text-secondary me-3">🌐</a>
                    <a href="#" class="text-secondary me-3">🔗</a>
                    <a href="#" class="text-secondary">🐦</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

